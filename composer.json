{
    "name": "stan-business/stan-php",
    "description": "Stan Client Library for PHP",
    "keywords": [
        "openapi",
        "php",
        "sdk",
        "rest",
        "api",
        "stan"
    ],
    "homepage": "https://doc.stan-app.fr",
    "license": "MIT",
    "authors": [
        {
            "name": "Stan",
            "homepage": "https://www.stan-business.fr"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "php-http/httplug": "^2.3",
        "psr/http-message": "^1.1",
        "php-http/discovery": "^1.19",
        "psr/http-client-implementation": "*",
        "psr/http-factory-implementation": "*",
        "http-interop/http-factory-guzzle": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "friendsofphp/php-cs-fixer": "^2.12",
        "php-http/mock-client": "^1.5",
        "guzzlehttp/psr7": "^1.9",
        "psr/http-message": "^1.1"
    },
    "autoload": {
        "psr-4": { "Stan\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "Stan\\Test\\" : "test/" }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
